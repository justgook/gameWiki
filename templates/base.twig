    <body>
        {% include "navibar.twig" %}
<div class="container">
    <div class="row-fluid">
        <div class="span3">
            {% block sidebar %}{% include "sidebar.twig"%}{% endblock %}
        </div>
        <div class="span9" id="content-wrapper">
            <div id="content">{% block content %}{% endblock %}</div>
        </div>
    </div>
</div>


<footer class="navbar-fixed-bottom row-fluid">
    <div class="navbar-inner">
        <div class="container">
            {% block footer %}
                &copy; Copyright 2013 by <a href="http://www.z0.lv/">z0</a>.
            {% endblock %}
        </div>
    </div>
</footer>

      <div id="modal" class="modal hide fade"></div>
        {% verbatim %}
        <script type="text/mustache" id="WikiCreate">
          <form method="post" class="form-horizontal">
            <div class="modal-header">
              <a class="close" data-dismiss="modal" >&times;</a>
              <h3>WikiPost {{editMode}} </h3>
            </div>
            <div class="modal-body">
              
                <div class="input-append">
                  <input class="span2" name="title" type="text">
                  <button class="btn" type="button">Check</button>
                </div>
                <div class="control-group">
                  <label>body </label>
                  <textarea class="input-block-level" rows="20" name="body"></textarea>
                </div>
            </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Create</button>
                <button type="button" data-dismiss="modal" class="btn">Cancel</button>
              </div>
          </form>
        </script>
        <script type="text/mustache" id="WikiListView">
            <header>
                <div class="pull-right">
                    <a href="/create/wiki" class="btn btn-small">Create New</a>
                    <a class="btn btn-small">Edit</a>
                </div>
                <h1>List Pages</h1>
            </header>
            <ul>
            {{#posts}}
                <li><a href="{{linkToTitle}}">{{title}}</a></li>
            {{/posts}}
            </ul>
        </script>
        <script type="text/mustache" id="WikiItemView">
            <header>
                <div class="pull-right">
                    <a class="btn btn-small">Edit</a>
                </div>
                <h1>{{title}}</h1>
            </header>
            {{body}}
        </script>
        {% endverbatim %}
    </body>
</html>